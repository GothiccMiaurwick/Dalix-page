generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              Int      @id @default(autoincrement())
  title           String
  slug            String   @unique
  price           Int
  formatted_price String?
  image           String
  images          Json?
  description     String?
  sizes           Json?
  category        String?
  is_featured     Boolean? @default(false)
  collection      String?  // Nueva temporada, Primavera 2025, etc.
  created_at      DateTime @default(now())

  @@map("products")
}

model Collection {
  id              Int      @id @default(autoincrement())
  title           String
  slug            String   @unique
  description     String?
  banner_image    String?
  season          String?  // "Primavera 2025", "Verano 2025", etc.
  is_active       Boolean  @default(true)
  created_at      DateTime @default(now())

  @@map("collections")
}
