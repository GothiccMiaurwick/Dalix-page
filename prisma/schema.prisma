generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              Int      @id @default(autoincrement())
  title           String
  slug            String   @unique
  price           Int
  formatted_price String?
  image           String   // Imagen principal
  image2          String?  // Segunda imagen (color variante)
  image3          String?  // Tercera imagen (color variante)
  images          Json?    // Array de todas las imágenes para la galería
  description     String?
  sizes           Json?
  category        String?
  is_featured     Boolean? @default(false)
  collection      String?
  created_at      DateTime @default(now())

  @@map("products")
}

model Collection {
  id              Int      @id @default(autoincrement())
  title           String
  slug            String   @unique
  description     String?
  banner_image    String?
  season          String?
  is_active       Boolean  @default(true)
  created_at      DateTime @default(now())

  @@map("collections")
}